#include <iostream>
using namespace std;
class osoba
{
	string nazwisko;
	string imie;
	int wiek;
};
class prostokat
{
public:
	int a;
	int b;

	int pole()
	{
		return a * b;
	};
};
class trapez
{
public:
	int a;
	int b;
	int h;
	int pole()
	{
		return ((a + b) * h) / 2;
	}
	
};
int main()
{
	prostokat p1;
	p1.a = 4;
	p1.b = 5;
	cout << "pole prostokata jest rowne " << p1.pole() <<endl;

	trapez t1;
	t1.a=3;
	t1.b = 5;
	t1.h = 6;
	cout << "pole trapezu wynosi : " << t1.pole();

  
}
